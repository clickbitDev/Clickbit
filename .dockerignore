# ============================================
# ClickBit .dockerignore
# Excludes files from Docker build context
# ============================================

# Git
.git
.gitignore
.gitattributes

# Documentation
*.md
documentations/
docs/
SECRETS_CLEANUP_SUMMARY.md
PROJECT_ARCHITECTURE.md

# Environment files
.env
.env.*
!.env.example

# Dependencies
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
package-lock.json

# Build outputs (will be built in Docker)
client/build/
client/dist/
build/
dist/

# Logs
logs/
*.log

# Database files
*.sqlite
*.sqlite3
*.db
*.sql
!migrations/*.sql

# Backups
backups/
*.backup
*.bak

# IDE
.vscode/
.idea/
*.swp
*.swo

# OS files
.DS_Store
Thumbs.db

# Docker
Dockerfile*
docker-compose*.yml
.dockerignore

# CI/CD
.github/
.gitlab-ci.yml

# Test files
coverage/
.nyc_output
*.test.js
*.spec.js

# Temporary files
tmp/
temp/
*.tmp

# Uploads (will be mounted as volume)
uploads/
client/public/images/uploads/

# Scripts (keep only necessary ones)
scripts/
!scripts/health-check.js

# PM2
ecosystem.config.js
.pm2/

# Nginx configs
nginx*.conf

# Deployment logs
DEPLOYMENT_LOG_*.txt

